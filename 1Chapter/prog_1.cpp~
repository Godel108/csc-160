//include statement (s)
#include <iostream>

//using namespace statement
using namespace std;



int main()
{
	//variable declaration
  int num1;
  int num2;
  int num3;
  int average;

 num1 = 125;
 num2 = 28;
 num3 = -25;
 average= (num1+num2+num3)/3;

	//executable statements
 cout << "num1= " << num1 << endl
      << "num2= " << num2 << endl
      << "num3= " << num3 << endl
      << "average= " << average << endl	
      << "Press any key to continue . . .";
   cin.get(); 

	//return statement
 return 0;
}
